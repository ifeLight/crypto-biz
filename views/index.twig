{% extends 'layout.twig' %}

{% block body %}
  <h1>{{title}}</h1>
  <p>Binance Price Table for NGN</p>
  <table style="width:100%">
  <tr>
    <th>Coin (BTC)</th>
    <th>NGN/Dollar</th>
    <th>USD Value</th>
    <th>USD/BTC</th>
    <th>NGN/BTC</th>
  </tr>
  
  {% for res in result %}
    <tr>
    <td style="text-align:center">{{ res.coin_amount}}</td>
    <td style="text-align:center">{{ res.per_dollar_price_NGN}}</td>
    <td style="text-align:center">{{ res.USD_value}}</td>
    <td style="text-align:center">{{ res.COIN_USD_price}}</td>
    <td style="text-align:center">{{ res.NGN_price}}</td>
  </tr>
  {% endfor %}
</table>
{% endblock %}
